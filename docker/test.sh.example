if [ $# -eq 0 ]
  then
    echo "No arguments supplied: Please give the name of the test you want to run e.g. ethernet_network.pp"
    exit 1
fi

proxy='{proxy}'
no_proxy='{no-proxy}'

docker run  -it \
			-v $(pwd)/:/puppet \
			-e ONEVIEW_URL='{url}' \
			-e ONEVIEW_USER='{user}' \
			-e ONEVIEW_PASSWORD='{password}' \
			-e ONEVIEW_SSL_ENABLED=false, \
			-e ONEVIEW_LOG_LEVEL='info' \
			-e ONEVIEW_API_VERSION=200 \
			-e HTTP_PROXY=$proxy \
			-e HTTPS_PROXY=$proxy \
			-e http_proxy=$proxy \
			-e https_proxy=$proxy	\
			-e no_proxy=$no_proxy \
			puppet-oneview-ruby puppet apply examples/$1 --debug --trace

#Example param for using token instead of username/password
#-e ONEVIEW_TOKEN='ABCDEFGH1234...' \
